<odoo>

    
    <record id="hr_contract_view_cfdi_form" model="ir.ui.view">
        <field name="name">hr_contract_view_cfdi_form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
        <field name="active" eval="1" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="CFDI Payslip">
                    <group>
                        <group>
                            <field name="cfdi_tipocontrato" />
                            <field name="cfdi_tiporegimen" />
                            <field name="cfdi_periodicidadpago" />
                            <field name="cfdi_sindicalizado" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>